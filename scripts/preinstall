#!/usr/bin/env node

var cp   = require('child_process')
var cpus = require('os').cpus
var fs   = require('fs')
var path = require('path')

var manager = require('download-manager')


const JOBS = cpus().length


var targetList =
[
  'arm-softmmu',
  'i386-softmmu',
  'x86_64-softmmu',
  'arm-linux-user',
  'i386-linux-user',
  'x86_64-linux-user'
]


// Source versions

const NODEJS_VERSION = "v0.11.14"
const QEMU_VERSION = "raspi"


// Source URLs

const NODEJS_URL="http://nodejs.org/dist/"+NODEJS_VERSION+"/node-"+NODEJS_VERSION+".tar.gz"
const QEMU_URL="https://github.com/0xabu/qemu/archive/"+QEMU_VERSION+".tar.gz"


// Checksums

const NODEJS_SHA256 = 'ce08b0a2769bcc135ca25639c9d411a038e93e0f5f5a83000ecde9b763c4dd83'


// Patch OpenSSL to work with musl
const PATCH_URL = 'https://raw.githubusercontent.com/maximeh/buildroot/0400322f2d4e28faa98e31815921f54106aeb2e6/package/openssl/openssl-004-musl-termios.patch'


//
// Node.js
//

var downloads =
[
  {
    name: 'node',
    url: NODEJS_URL,
    sha256: NODEJS_SHA256,
    patch: PATCH_URL,
    strip: 1,
    path: 'deps/openssl/openssl',
    action: function(callback)
    {
      // Allow to inspect NodeOS version from inside Node.js
      try
      {
        var version = require('../../../package.json').version
      }
      catch(e)
      {
        var version = '(unknown)'
      }
      var data = "exports.nodeos = '"+version+"'"

      fs.appendFile(path.join('deps', this.name, 'lib/os.js'), data, callback)
    }
  },
  {
    name: 'qemu',
    url: QEMU_URL,
    action: function(callback)
    {
      var options =
      {
        cwd: path.join('deps', this.name),
        stdio: ['ignore', 'ignore', process.stderr]
      }

      var args = ['clone','git://git.qemu-project.org/dtc.git']

      cp.spawn('git', args, options)
      .on('exit', function(error)
      {
        if(error) return callback(error)

        var args =
        [
          '--prefix='+path.resolve('usr'),
          '--target-list='+targetList.join(','),
          '--disable-docs',
          '--disable-vnc',
          '--enable-sdl'
        ]

        cp.execFile('./configure', args, options, function(error)
        {
          if(error) return callback(error)

          cp.spawn('make', ['-j'+JOBS], options)
          .on('exit', function(error)
          {
            if(error) return callback(error)

            cp.spawn('make', ['install'], options)
            .on('exit', callback)
          })
        })
      })
    }
  }
]


manager(downloads, function(error)
{
  if(error)
  {
    console.error(error)
    process.exit(1)
  }
})
