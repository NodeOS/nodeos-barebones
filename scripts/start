#!/usr/bin/env node

var readlinkSync = require('fs').readlinkSync
var spawn        = require('child_process').spawn


var cpu = readlinkSync('bzImage').split('/');

var cpu_family;
switch(cpu[cpu.length-2])
{
  case 'armv6':
    cpu_family = 'arm'
  break

  case 'i386':
  case 'i486':
  case 'i586':
  case 'i686':
  case 'i786':
    cpu_family = 'i386'
  break

  case 'nocona':
  case 'x86_64':
    cpu_family = 'x86_64'
  break
}

var command = 'qemu-system-'+cpu_family

var args =
[
  '-enable-kvm',
  '--kernel', 'bzImage'
]

switch(process.argv[2])
{
  case 'nographic':
    args.push('-append', 'console=ttyS0', '-nographic')
  break

  case 'curses':
    args.push('-append', 'vga=extended', '-curses')  // 80x50
  break

  default:
    args.push('-append', 'vga=0x318')  // 1024x768x24
}

spawn(command, args, {stdio: 'inherit'})
.on('error', console.trace.bind(console))
